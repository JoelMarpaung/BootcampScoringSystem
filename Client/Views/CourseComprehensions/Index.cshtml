    function Create() {
        var item = new Object();
        item.Name = $('#Name').val();
        item.Weight = $('#Weight').val();
        item.Class = $('#Class').val();
        $.ajax({
            url: "CourseComprehensions/InsertOrUpdate/",
            type: "POST",
            dataType: "json",
            data: item,
            success: function (result) {
                Swal.fire({
                    position: 'center',
                    type: 'success',
                    title: 'Data has been created'
                });
                $('#myModal').hide();
            },
            error: function (result) {
                Swal.fire('center', 'error', 'Create Failed');
            }
        });
    }

    function Update() {
        debugger;
        var item = new Object();
        item.Id = $('#Id').val();
        item.Name = $('#Name').val();
        item.Weight = $('#Weight').val();
        item.Class = $('#Class').val();
        $.ajax({
            type: "POST",
            url: "CourseComprehensions/InsertOrUpdate/",
            data: item,
            success: function (result) {
                Swal.fire({
                    position: 'center',
                    type: 'success',
                    title: 'Update Successfully'
                });
                loadData();
            },
            error: function (result) {
                Swal.fire('center', 'error', 'Update Fail');
            }
        });
    }
    
    function GetbyId(ID) {
        debugger;
        $.ajax({
            url: "CourseComprehensions/GetbyId/" + ID,
            type: "GET",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            async: false,
            success: function (result) {
                debugger;
                const obj = JSON.parse(result);
                $('#Id').val(obj.Id);
                $('#Name').val(obj.Name);
                $('#Weight').val(obj.Weight);
                $('#Class').val(obj.Class.Id);
                
                $('#myModal').modal('show');
                $('#btnUpdate').show();
                $('#btnAdd').hide();
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
        return false;
    }

    function Delete(ID) {
        debugger;
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            debugger;
            if (result.value) {
                $.ajax({
                    url: "CourseComprehensions/Delete/",
                    type: "DELETE",
                    data: { id: ID }
                }).then((result) => {
                    debugger;
                        Swal.fire({
                            position: 'center',
                            type: 'success',
                            title: 'Delete Successfully'
                        });
                        loadData();
                });
            }
        })
    }
    
    function clearTextBox() {
        $('#Id').val("");
        $('#Name').val("");
        $('#Weight').val("");
        $('#btnUpdate').hide();
        $('#btnAdd').show();
        loadClass();
     
    }


    
